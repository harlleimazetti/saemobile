<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
		xmlns:android="http://schemas.android.com/apk/res/android"
        id        = "com.saemobile.hccm"
        version   = "1.0.0">
    <name>SAEMobile</name>

    <description>
        SAE Mobile
    </description>

    <author href="http://www.saedf.org.br/" email="harlleimazetti@gmail.com">
        SAE Mobile
    </author>

	<gap:config-file platform="android" parent="/manifest">
		<application android:debuggable="false" />
	</gap:config-file>


    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />

    <plugin name="cordova-plugin-whitelist" source="npm"/>

    <allow-navigation href="*://*.saedf.org.br/*" />
    <allow-navigation href="*://*.google.com/*" />

    <allow-intent href="*://*.saedf.org.br/*" />
    <allow-intent href="*://*.google.com/*" />

    <access origin="*" subdomains="true" />

</widget>
